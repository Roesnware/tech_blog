<div class="container">

    <div class="blogPost">
        <header>
            <h2>{{blogPosts.title}}</h2>
            <p>Posted by {{blogPosts.user.username}} on {{blogPosts.created_date}}</p>
        </header>
        <h3>{{blogPosts.content}}</h3>
    </div>

    {{#each comments as |comment| }}

    <div class="blogPost Comment">
        <header>
            <h1> Hide </h1>
        </header>
        <h3>{{comment.content}}</h3>
        <h3>- {{comment.user.username}}, {{comment.created_date}}</h3>
    </div>

    {{/each}}

    {{#if logged_in}}
    <div class="addCommentBox">
        <h1>Hide</h1>
        <h2>Comment</h2>
        <form>
            <input id="comment-box" type="text">
            <a id="submit-comment-btn" href="">Submit</a>
        </form>

    </div>
    {{/if}}


</div>

<script src="/js/addComment.js"></script>