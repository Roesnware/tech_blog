<div class="container">

    <div>

        {{#each blogPost as |post|}}

        <a href="/blog/{{post.id}}">

            <div class="blogPost">
                <header>
                    <h2>{{post.title}}</h2>
                    <p>Posted by {{post.user.username}} on {{post.created_date}}</p>
                </header>
                <h3>{{post.content}}</h3>
            </div>

        </a>

        {{/each}}

    </div>

</div>