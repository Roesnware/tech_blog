<div class="container">
  <div class="forms">
    <div class="col-md-6">
      <h2 id="signup-header">Signup</h2>

      <form class="form signup-form">
        <div class="form-group">
            <h3>Name</h3>
            <input class="form-input" type="text" id="name-signup" />
        </div>
        <div class="form-group">
            <h3>Username</h3>
            <input class="form-input" type="text" id="username-signup" />
        </div>
        <div class="form-group">
            <h3>Password</h3>
            <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Sign Up!</button>
            <button class="btn btn-primary back-to-login-btn" type="click">Back to Login!</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/signup.js"></script>